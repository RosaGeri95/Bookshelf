<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bookshelf.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Start">
        <SearchBar Text="{Binding SearchText}"  Placeholder="search a book" PlaceholderColor="Gray" HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Start" SearchCommand="{Binding SearchCommand}"/>
        <Button Text="Favourites" HorizontalOptions="End"/>
        <Button Text="Kedvencek" HorizontalOptions="Center"/>
        <ListView ItemsSource="{Binding Books}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell Height="100">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding BookTitle}" LineBreakMode="WordWrap" WidthRequest="300"/>
                            <Label Text="{Binding Author}" LineBreakMode="WordWrap" WidthRequest="100"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>