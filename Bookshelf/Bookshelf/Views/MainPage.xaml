<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bookshelf.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Start">
        <SearchBar x:Name="searchBar" Placeholder="search a book" PlaceholderColor="Gray" HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Start" SearchCommand="{Binding SearchCommand}"/>
    </StackLayout>

</ContentPage>